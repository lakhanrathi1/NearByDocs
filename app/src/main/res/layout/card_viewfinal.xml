<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="365dp"
    android:layout_height="230dp"
    android:layout_margin="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="25dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="63dp"
        android:src="@drawable/location1" />

    <TextView
        android:id="@+id/Card_doctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:text="Dr.Lakhan Rathi"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Callbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/round1"
        android:backgroundTintMode="src_in"
        android:onClick="call"
        android:text="Call"
        android:textColor="@android:color/background_light" />

    <ImageView
        android:id="@+id/card_doctorImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="25dp"
        android:src="@android:drawable/btn_star_big_on" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="98dp"
        android:src="@drawable/call" />

    <TextView
        android:id="@+id/card_doctorNo"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="90dp"
        android:gravity="left|center"
        android:text="7350588622"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="133dp"
        android:src="@drawable/time" />

    <TextView
        android:id="@+id/card_doctorTime"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="125dp"
        android:gravity="left|center"
        android:text="10 am - 5 pm"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="168dp"
        android:src="@drawable/rupee" />

    <TextView
        android:id="@+id/card_doctorFees"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="160dp"
        android:gravity="left|center"
        android:text="Rs.100"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/Card_doctorLocation"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="62dp"
        android:textSize="16sp" />


</android.support.v7.widget.CardView>