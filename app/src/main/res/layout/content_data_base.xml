<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lakhan.health.DataBase"
    tools:showIn="@layout/activity_data_base">



    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/fname"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="name"
                    android:inputType="textPersonName"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />


                <EditText
                    android:id="@+id/rate"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    android:hint="Rating"
                    android:inputType="textPersonName"
                    android:layout_below="@+id/fname"
                    android:layout_alignParentEnd="true" />


                <EditText
                    android:id="@+id/cate"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Category"
                    android:inputType="textPersonName"
                    android:layout_below="@+id/rate"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="17dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:onClick="select"
                    app:srcCompat="@android:drawable/btn_star_big_on" />


                <EditText
                    android:id="@+id/fees"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Fees"
                    android:inputType="textPersonName"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/cate"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Contact No"
                    android:inputType="textPersonName"
                    android:layout_marginTop="13dp"
                    android:layout_below="@+id/fees"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/time"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Time"
                    android:inputType="textPersonName"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/contact"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/emergency"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Emergency"
                    android:inputType="textPersonName"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/time"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/pri"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="500dp"
                    android:ems="10"
                    android:hint="Priority"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/savebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="570dp"
                    android:onClick="save"
                    android:text="Save" />

                <EditText
                    android:id="@+id/location"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:hint="Location"
                    android:inputType="textPersonName"
                    android:layout_below="@+id/emergency"
                    android:layout_alignParentStart="true" />


                <Button
                    android:id="@+id/showbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="28dp"
                    android:layout_marginLeft="50dp"
                    android:onClick="show"
                    android:text="Show" />


            </RelativeLayout>>
        </ScrollView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/list12"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>





</RelativeLayout>
