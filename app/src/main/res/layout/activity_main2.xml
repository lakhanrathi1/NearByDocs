<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.lakhan.health.Main2Activity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:background="@android:color/background_light"
        android:layout_below="@+id/emergencyButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/Cardiology"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="12dp"
                    android:tag="Cardiologist"
                    android:layout_marginTop="15dp"
                    android:onClick="doctor_list"
                    app:srcCompat="@drawable/cardiology" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="120dp"
                    android:gravity="center"
                    android:tag="1"
                    android:text="Cardiology"
                    android:textColorLink="@android:color/background_dark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Dentist"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="15dp"
                    android:onClick="doctor_list"
                    android:tag="Dentist"
                    android:layout_marginStart="135dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/dentist" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="127dp"
                    android:layout_marginTop="120dp"
                    android:gravity="center"
                    android:tag="2"
                    android:text="Dentist"
                    android:textColorLink="@android:color/background_dark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/General"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:onClick="doctor_list"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="257dp"
                    android:layout_marginTop="15dp"
                    android:tag="General Surgeon"
                    app:srcCompat="@drawable/generalsurgeryicon" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:gravity="left|center|start"
                    android:text="General Surgeon"
                    android:textColorLink="@android:color/background_dark"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:tag="3"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_toEndOf="@+id/textView12" />


                <ImageView
                    android:id="@+id/Neurology"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:onClick="doctor_list"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="155dp"
                    android:tag="Neurologist"
                    app:srcCompat="@drawable/neurologist" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="265dp"
                    android:gravity="center"
                    android:text="Neurologist"
                    android:textColorLink="@android:color/background_dark"
                    android:textSize="15sp"
                    android:tag="4"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Orthopedic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="135dp"
                    android:layout_marginTop="155dp"
                    android:onClick="doctor_list"
                    android:tag="Orthopedic"
                    app:srcCompat="@drawable/orthopedic" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="135dp"
                    android:layout_marginTop="265dp"
                    android:gravity="center"
                    android:text="Orthopedic"
                    android:tag="5"
                    android:textColorLink="@android:color/background_dark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Pathalogy"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="15dp"
                    android:onClick="doctor_list"
                    android:layout_marginStart="257dp"
                    android:tag="Pathalogist"
                    android:layout_marginTop="155dp"
                    app:srcCompat="@drawable/pathology" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="257dp"
                    android:layout_marginTop="265dp"
                    android:gravity="center"
                    android:tag="6"
                    android:text="Pathologist"
                    android:textColorLink="@android:color/background_dark"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/psychiatrist"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="15dp"
                    android:onClick="doctor_list"
                    android:tag="Psychiatrist"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="305dp"
                    app:srcCompat="@drawable/psychiatrist" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="415dp"
                    android:gravity="center"
                    android:tag="7"
                    android:text="Psychiatrist"
                    android:textColorLink="@android:color/background_dark"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Pysical"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="15dp"
                    android:tag="Physical Therapy"
                    android:layout_marginStart="135dp"
                    android:onClick="doctor_list"
                    android:layout_marginTop="305dp"
                    app:srcCompat="@drawable/physicaltherapy" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="127dp"
                    android:layout_marginTop="415dp"
                    android:gravity="left|center"
                    android:text="Physical Therapy"
                    android:tag="8"
                    android:textColorLink="@android:color/background_dark"
                    android:textSize="15sp"
                    android:textStyle="bold" />








            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/ok"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="12dp"
            android:hint="Searching for location.....     If doesn't appear please refresh from above menu"
            android:paddingStart="10dp"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/ok"
            android:layout_marginTop="5dp"
            android:text="Your Location"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/change_locationButto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/location" />

    <Button
        android:id="@+id/emergencyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/round1"
        android:onClick="emergency_click"
        android:text="Emergency"
        android:textColor="@android:color/background_light" />


</RelativeLayout>
